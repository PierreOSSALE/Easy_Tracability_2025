              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/search/barcode/:barcode",
              "host": ["{{baseUrl}}"],
              "path": ["products", "search", "barcode", ":barcode"]
            }
          }
        },
        {
          "name": "Get In-Stock Products",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/in-stock",
