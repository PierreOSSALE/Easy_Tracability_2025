            }
          }
        },
        {
          "name": "Get Low-Stock Products",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/low-stock/:threshold",
              "host": ["{{baseUrl}}"],
              "path": ["products", "low-stock", ":threshold"]
            }
          }
        },
        {
          "name": "Get Out-of-Stock Products",
          "request": {
            "method": "GET",
