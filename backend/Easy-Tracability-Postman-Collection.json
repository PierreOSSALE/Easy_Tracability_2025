{
  "info": {
    "name": "Easy Tracability API",
    "_postman_id": "e-tracability-api",
    "version": "1.0.0",
    "description": "Collection complète de tests Easy Tracability avec préfixe /api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{ \"username\": \"admin\", \"password\": \"adminpass\", \"mode\": \"jwt\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{ \"token\": \"{{refreshToken}}\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        },
        {
          "name": "Request Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{ \"email\": \"admin@example.com\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/request-reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "request-reset-password"]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{ \"token\": \"resetTokenHere\", \"newPassword\": \"newPassword123\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "reset-password"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"username\": \"newuser\", \"hashedPassword\": \"Password123!\", \"email\": \"newuser@example.com\", \"role\": \"Administrateur\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get User by UUID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/:uuid",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", ":uuid"]
            }
          }
        },
        {
          "name": "Search User by Username",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/search?username=newuser",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "search"],
              "query": [{ "key": "username", "value": "newuser" }]
            }
          }
        },
        {
          "name": "Search User by Role",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/search?role=Administrateur",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "search"],
              "query": [{ "key": "role", "value": "Administrateur" }]
            }
          }
        },
        {
          "name": "Update User by UUID",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"username\": \"updateduser\", \"email\": \"updated@example.com\", \"role\": \"Administrateur\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/:uuid",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", ":uuid"]
            }
          }
        },
        {
          "name": "Delete User by UUID",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/:uuid",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", ":uuid"]
            }
          }
        },
        {
          "name": "Update My Profile (email & picture)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "email",
                  "value": "newemail@example.com",
                  "type": "text"
                },
                { "key": "profilePicture", "type": "file", "src": "" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/profile/:uuid",
              "host": ["{{baseUrl}}"],
              "path": ["api", "profile", ":uuid"]
            }
          }
        },
        {
          "name": "Update My Profile [NEW]",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "email",
                  "value": "nouvelemail@example.com",
                  "type": "text"
                },
                { "key": "profilePicture", "type": "file", "src": "" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/profile/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "profile", "me"]
            }
          }
        }
      ]
    },
